<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alarmContainer"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topAlarmView">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAlarmTime"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/default_time"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentLeft="true"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swAlarmState"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middleAlarmView"
            android:layout_below="@+id/topAlarmView"
            android:layout_marginTop="@dimen/alarm_item_view_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnShowAlarmOptions"
                android:layout_marginRight="20dp"
                android:src="@android:drawable/arrow_down_float"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>
            <include layout="@layout/small_days_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/smallActiveDaysList"
                android:layout_toRightOf="@+id/btnShowAlarmOptions"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteAlarm"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomAlarmView"
            android:layout_below="@+id/middleAlarmView"
            android:visibility="gone">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chbRepeatAlarm"
                android:text="@string/repeat"
                android:textAppearance="?android:attr/textAppearanceButton"/>
            <include layout="@layout/days_layout"
                android:id="@+id/daysView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chbRepeatAlarm"
                android:layout_marginTop="@dimen/alarm_item_view_vertical_margin"
                android:layout_marginBottom="@dimen/alarm_item_view_vertical_margin"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/daysView"
                    android:id="@+id/bottomControls">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/llMelodyChooser"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/presence_audio_online"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="melody"
                            android:paddingLeft="@dimen/alarm_item_view_horizontal_margin"/>
                    </LinearLayout>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chbVibrationOn"
                        android:layout_alignParentRight="true"
                        android:text="@string/vibration"
                        android:textAppearance="?android:attr/textAppearanceButton"/>
                </RelativeLayout>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnHideAlarmOptions"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/arrow_up_float"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_below="@+id/bottomControls"
                android:layout_marginTop="@dimen/activity_vertical_margin" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>